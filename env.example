# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/themobileprof_dev

# Base URL
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

TEST_EMAIL=samuelanyaele@gmail.com

# NODE_ENV=production
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
PORT=3000

# Test Configuration
# Per-test timeouts are configured per test in the database; no global timeout env var
# MAX_TEST_ATTEMPTS_PER_USER is deprecated in favor of system setting max_test_attempts

# Email Configuration
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@themobileprof.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Sponsorship Configuration (configurable via system settings as well)
# SPONSORSHIP_CODE_LENGTH and MAX_SPONSORSHIP_DURATION_MONTHS can be managed via admin system settings.
SPONSORSHIP_CODE_LENGTH=8
MAX_SPONSORSHIP_DURATION_MONTHS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload (configurable)
UPLOAD_MAX_IMAGE_SIZE=5242880
UPLOAD_MAX_DOCUMENT_SIZE=10485760
UPLOAD_MAX_VIDEO_SIZE=524288000
UPLOAD_PATH=./uploads

# Flutterwave Payment Configuration (v3)
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_SECRET_HASH=your-webhook-secret-hash

# Frontend URL for payment redirects (when callbackUrl not provided)
FRONTEND_URL=https://themobileprof.com

# Deployment Configuration (Optional - for deploy.sh script)
# Docker Hub username for pulling images
DOCKERHUB_USERNAME=your-username

# Container and resource names (optional - uses defaults if not set)
CONTAINER_NAME=themobileprof-backend
DB_CONTAINER_NAME=themobileprof-db
NETWORK_NAME=themobileprof-network
VOLUME_NAME=themobileprof-uploads
DB_VOLUME_NAME=themobileprof-db-data

# Port configuration (optional - uses defaults if not set)
APP_PORT=3000
DB_PORT=5432

# PostgreSQL version (optional - uses default if not set)
POSTGRES_VERSION=15

# Database deployment control (set to 'false' to skip database deployment)
DEPLOY_DB=true 