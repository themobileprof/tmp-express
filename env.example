# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/themobileprof

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12
PORT=3000

# Test Configuration
TEST_TIMEOUT_MINUTES=120
MAX_TEST_ATTEMPTS_PER_USER=3

# Email Configuration
EMAIL_SERVICE_API_KEY=your-email-service-key
EMAIL_FROM_ADDRESS=noreply@themobileprof.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Sponsorship Configuration
SPONSORSHIP_CODE_LENGTH=10
MAX_SPONSORSHIP_DURATION_MONTHS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Deployment Configuration (Optional - for deploy.sh script)
# Docker Hub username for pulling images
DOCKERHUB_USERNAME=your-username

# Container and resource names (optional - uses defaults if not set)
CONTAINER_NAME=themobileprof-backend
DB_CONTAINER_NAME=themobileprof-db
NETWORK_NAME=themobileprof-network
VOLUME_NAME=themobileprof-uploads
DB_VOLUME_NAME=themobileprof-db-data

# Port configuration (optional - uses defaults if not set)
APP_PORT=3000
DB_PORT=5432

# PostgreSQL version (optional - uses default if not set)
POSTGRES_VERSION=15

# Database deployment control (set to 'false' to skip database deployment)
DEPLOY_DB=true 